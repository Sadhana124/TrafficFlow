  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>

      <form action="/query" method="post" id="form_id">
    <div class="container" id="formContainer">




        <div class = "row form-group">
          <div class="col-xs-6">
            <label for="from">From:</label>
            <input type="text" class="form-control" name="from" id="fromId">
          </div>
          <div class="col-xs-6">
            <label for="to">To:</label>
            <input type="text" class="form-control" name="to" id="toId">
          </div>
        </div>

        <% for(var i=0; i<availableAttributes.length; i++) { %>
        <div class = "col-xs-6">
        <input type="checkbox" name = "<%= availableAttributes[i]%>" id="<%= availableAttributes[i]%>">
        <label for = "<%= availableAttributes[i]%>"><%= availableAttributes[i]%></label>
        </div>
        <% } %>

        <div class="form-group row">
            <div class = "col-xs-3">
                <label>Select where attribute:</label>
            </div>
            <div class = "col-xs-3">
                <label>Select conditon for the selected where attribute:</label>
            </div>
            <div class = "col-xs-3">
                <label>Value for the condition attribute:</label>
            </div>
            <div class = "col-xs-3">
                <label>Value for the condition to combne with next condition:</label>
            </div>
        </div>

        <div id="whereClauseSelection">

            <div class = "row form-group">
            <input type="button" onclick="addRow()" value="Add another where condition" class="form-control">
            </div>

        <div class="form-group row">

            <div class = "col-xs-3">

                <select name="condAttr-1" id = "condAttr-1" class = "form-control">
                    <% for(var i=0; i<availableAttributes.length; i++) { %>
                    <option value=<%= availableAttributes[i]%>><%= availableAttributes[i]%></option>
                    <% } %>
                </select>
            </div>

            <div class = "col-xs-3">

                <select name="op-1" id="op-1" class = "form-control">
                    <% for(var i=0; i<conditions.length; i++) { %>
                    <option value=<%= conditions[i]%>><%= conditions[i]%></option>
                    <% } %>
                </select>
            </div>

            <div class = "col-xs-3">
                <input type="text" class="form-control" name="condValue-1" id="condValue-1" data-bind="value: toTime">
            </div>

            <div class = "col-xs-3">
                <select name="combiner-1" id="combiner-1" class = "form-control">
                    <option value="AND">AND</option>
                    <option value="OR">OR</option>
                </select>
            </div>

        </div>

        <!-- row 2 - needs to be dynamically added in future -->



       <!-- <input type="button" onclick="addRow()" value="Add another where condition" class=row"> -->

        </div>


        <!--<input type="submit" value="xyz" class = "btn btn-default">-->


    </div>

        </form>

